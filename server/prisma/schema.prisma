// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                     Int          @id @default(autoincrement()) @map("id")
  email                  String       @unique
  name                   String?
  username               String       @unique
  sentFriendRequests     User[]       @relation("UserFriendRequests")
  receivedFriendRequests User[]       @relation("UserFriendRequests")
  friends                User[]       @relation("UserFriendsUser")
  friendsOf              User[]       @relation("UserFriendsUser")
  updatedAt              DateTime     @updatedAt
  createdAt              DateTime     @default(now())
  chatsCreated           Chat[]       @relation("UserCreatedByChat")
  memberOfChats          Chat[]       @relation("UserMemberOfChats")
  messages               Message[]    @relation("WhoUserMessage")
  likedMessages          Message[]    @relation("LikedByUserMessage")
  adminOfChats           Chat[]       @relation("UserAdminOfChats")
  chatUpdates            ChatUpdate[]
}

model Chat {
  id          Int          @id @default(autoincrement())
  name        String?
  description String?
  updatedAt   DateTime     @updatedAt
  createdAt   DateTime     @default(now())
  deletedAt   DateTime?
  createdBy   User         @relation("UserCreatedByChat", fields: [createdById], references: [id])
  createdById Int
  isDM        Boolean
  members     User[]       @relation("UserMemberOfChats")
  admins      User[]       @relation("UserAdminOfChats")
  messages    Message[]    @relation("ChatMessagesMessage")
  updates     ChatUpdate[]
}

model ChatUpdate {
  id               Int      @id @default(autoincrement())
  chat             Chat     @relation(fields: [chatId], references: [id])
  chatId           Int
  createdAt        DateTime @default(now())
  createdBy        User     @relation(fields: [createdById], references: [id])
  createdById      Int
  name             String?
  description      String?
  memberIdsAdded   String[]
  memberIdsRemoved String[]
}

model Message {
  id          Int       @id @default(autoincrement())
  content     String
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
  createdBy   User      @relation("WhoUserMessage", fields: [createdById], references: [id])
  createdById Int
  chat        Chat      @relation("ChatMessagesMessage", fields: [chatId], references: [id])
  chatId      Int
  likedBy     User[]    @relation("LikedByUserMessage")
  deletedAt   DateTime?
}
